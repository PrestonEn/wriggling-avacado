<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard_back">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/app_name"
        android:id="@+id/txtTitle"
        android:layout_weight="5"
        android:textSize="@dimen/title_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="3">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgEarl"
                android:layout_gravity="center"
                android:src="@drawable/earl_intro" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgArm"
                android:src="@drawable/earl_intro_arm" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/quickplay"
                    android:id="@+id/btnQuickPlay"
                    android:layout_gravity="center"
                    android:onClick="startGame"
                    android:layout_weight="1"
                    android:textSize="@dimen/button_size"
                    android:padding="@dimen/padding"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:shadowColor="@color/transparent"
                    android:singleLine="true" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/play"
                    android:id="@+id/btnPlay"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/button_size"
                    android:padding="@dimen/padding"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:shadowColor="@color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/tutorial"
                    android:id="@+id/btnTutorial"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/button_size"
                    android:padding="@dimen/padding"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:shadowColor="@color/transparent" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/settings"
                    android:id="@+id/btnSettings"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/button_size"
                    android:padding="@dimen/padding"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:shadowColor="@color/transparent"
                    android:onClick="goToSettings" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="@string/scores"
                android:id="@+id/btnScores"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:padding="@dimen/padding"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:shadowColor="@color/transparent"
                android:onClick="goToHighScores" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>