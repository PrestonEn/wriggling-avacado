<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard_back">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/about_game"
        android:id="@+id/txtTitle"
        android:layout_weight="1"
        android:textSize="@dimen/select_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/character_tyler"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/character_stacey"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/character_preston"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/back"
        android:id="@+id/btnBack"
        android:layout_weight="1"
        android:textSize="@dimen/button_size"
        android:padding="@dimen/padding"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:shadowColor="@color/transparent"
        android:onClick="fromAboutToMain"
        android:gravity="right" />

</LinearLayout>